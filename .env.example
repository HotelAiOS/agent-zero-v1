# Agent Zero V1 - Environment Configuration
# Copy this file to .env and update with your values

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=agent-pass

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=agent
RABBITMQ_PASSWORD=agent-rabbitmq-pass
RABBITMQ_VHOST=/

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Ollama Configuration (optional)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.3

# Agent Configuration
AGENT_WORKSPACE_DIR=/tmp/agent-zero-workspace
AGENT_LOG_LEVEL=INFO
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=300

# LLM Configuration
LLM_PROVIDER=ollama  # or openai, anthropic
LLM_API_KEY=your-api-key-here
LLM_MODEL=llama3.3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Development
DEBUG=false
LOG_LEVEL=INFO
